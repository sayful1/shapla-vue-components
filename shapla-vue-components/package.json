    "shapla-confirm-dialog": "^1.0.0",
    "shapla-data-table": "^1.0.1",
    "shapla-data-table-pagination": "^1.0.0",
    "shapla-data-table-status": "^1.0.2",
    "shapla-delete": "^1.0.2",
    "shapla-dropdown": "^1.0.0",
    "shapla-modal": "^1.0.4",
    "shapla-notifications": "^1.0.5",
