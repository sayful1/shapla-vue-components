{
  "name": "shapla-options-field",
  "description": "A custom input field to build options for select field",
  "version": "1.0.0",
  "author": {
    "name": "Sayful Islam",
    "email": "sayful.islam001@gmail.com",
    "url": "https://sayfulislam.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "options",
    "options-field",
    "options-builder"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-vue-components/issues"
  },
  "main": "dist/options-field.common.js",
  "unpkg": "dist/options-field.umd.min.js",
  "module": "src/index.js",
  "browser": {
    "./sfc": "src/FieldOptions.vue"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve --public ../../public ./example/main.js",
    "build": "vue-cli-service build --public ../../public ./example/main.js",
    "build:lib": "vue-cli-service build --target lib --name options-field ./src/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "shapla-button": "^1.0.7",
    "shapla-checkbox": "^1.0.4",
    "shapla-color-system": "^1.0.3",
    "shapla-icon-container": "^1.0.1",
    "shapla-radio": "^1.0.2",
    "vue": "^2.6.11",
    "vuedraggable": "^2.24.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^4.4.6",
    "@vue/cli-service": "^4.4.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.14.1",
    "sass-loader": "^9.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
