{
  "name": "shapla-tabs",
  "description": "A simple responsive horizontal navigation tabs component based on Bulma Tabs for Vue.js",
  "version": "1.0.4",
  "author": {
    "name": "Sayful Islam",
    "email": "sayful.islam001@gmail.com",
    "url": "https://sayfulislam.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "tabs",
    "tab"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-vue-components/issues"
  },
  "main": "dist/tabs.common.js",
  "unpkg": "dist/tabs.umd.js",
  "module": "src/index.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve ./example/main.js",
    "build": "vue-cli-service build ./example/main.js",
    "build:lib": "vue-cli-service build --target lib --name tabs ./src/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "shapla-color-system": "latest"
  },
  "peerDependencies": {
    "vue": "^2.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.9",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.16.0",
    "eslint-plugin-vue": "^7.3.0",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.0",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 1 years"
  ]
}
