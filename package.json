{
  "name": "shapla-vue-components",
  "description": "A collection of reusable vue components for rapid development.",
  "version": "1.7.0",
  "author": {
    "name": "Sayful Islam",
    "email": "sayful.islam001@gmail.com",
    "url": "https://sayfulislam.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "components"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-vue-components.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-vue-components/issues"
  },
  "main": "dist/components.common.js",
  "unpkg": "dist/components.umd.min.js",
  "module": "src/index.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name components ./src/index.js",
    "lint": "vue-cli-service lint"
  },
  "peerDependencies": {
    "vue": "^2.6"
  },
  "dependencies": {
    "core-js": "^3.16.2",
    "shapla-button": "^2.0",
    "shapla-checkbox": "latest",
    "shapla-chip": "latest",
    "shapla-color-system": "latest",
    "shapla-columns": "latest",
    "shapla-confirm-dialog": "latest",
    "shapla-dashboard-layout": "latest",
    "shapla-data-table": "latest",
    "shapla-data-table-pagination": "latest",
    "shapla-data-table-status": "latest",
    "shapla-delete": "latest",
    "shapla-dropdown": "latest",
    "shapla-file-uploader": "latest",
    "shapla-icon-container": "latest",
    "shapla-image-container": "latest",
    "shapla-input-slider": "latest",
    "shapla-modal": "latest",
    "shapla-notifications": "latest",
    "shapla-progress-bar": "latest",
    "shapla-radio": "latest",
    "shapla-radio-button": "latest",
    "shapla-search-form": "latest",
    "shapla-select-field": "latest",
    "shapla-side-navigation": "latest",
    "shapla-spinner": "latest",
    "shapla-star-rating": "latest",
    "shapla-switch": "latest",
    "shapla-tabs": "latest",
    "shapla-text-field": "latest",
    "shapla-toggles": "latest"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.10",
    "@vue/cli-plugin-eslint": "^4.5.10",
    "@vue/cli-service": "^4.5.10",
    "autoprefixer": "^8.6.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^7.4.1",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.0",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
