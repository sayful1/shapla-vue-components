  "author": {
    "name": "Sayful Islam",
    "email": "sayful.islam001@gmail.com",
    "url": "https://sayfulislam.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "spinner",
    "loading"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayful1/shapla-spinner.git"
  },
  "bugs": {
    "url": "https://github.com/sayful1/shapla-spinner/issues"
  },
  "homepage": "https://github.com/sayful1/shapla-spinner#readme",
  "main": "dist/spinner.common.js",
  "unpkg": "dist/spinner.umd.js",
